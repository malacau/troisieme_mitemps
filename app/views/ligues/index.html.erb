<div class="main-container">
  <div class="top-view">
    <div class="top-view-title">
      <h1>Mes <br>Ligues</h1>
    </div>
    <div class="top-view-content-flex">
      <%= link_to "CrÃ©er une ligue", new_ligue_path, class:"button-white" %>
      <%= link_to "Rejoindre une ligue", "#", class:"button-outlined" %>
    </div>
  </div>

  <div class="languette-container">
    <% @ligues.each do |ligue| %>
      <% if ligue.participations.present? %>
        <% player_ligue = ligue.participations.find {|participation| participation.user == current_user}  %>
      <% end %>
      <% if ligue.user == current_user || player_ligue.present? %>
        <%= render 'shared/card-ligue', ligue: ligue %>
      <% end %>
    <% end %>
    <% if current_user.participations.empty? %>
      <p class="text-center">Vous n'avez pas encore de ligue</p>
    <% end %>
  </div>
  <%= render 'shared/navbar' %>
</div>



