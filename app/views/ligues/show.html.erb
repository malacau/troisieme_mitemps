<%= @ligue.name %> </strong> </div>
<p><strong> <%= @ligue.description %> </strong> </p>

<p>Photo: <strong>   <%= cl_image_tag @ligue.photo.key, height: 125, width: 150%> </strong> </p>

<% if @ligue.user == current_user && @ligue.participations.count < 4 %>
<%= simple_form_for [@ligue, @participation] do |f| %>
  <%= f.association :user, collection: @users, label_method: :nickname%>
  <%= f.button :submit, value: "Ajouter"%>
<% end %>
<% end %>
<ul class="thunderbolt">
<% @ligue.participations.each_with_index do |participation, index| %>
<li> <%= render 'shared/card-ranking', participation: participation%></li>
<% end %>
</ul>
<%= link_to "Discussion", ligue_messages_path(@ligue) %>


