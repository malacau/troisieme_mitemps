<%= link_to ligue_path(ligue) do  %>
<div class="container-card-ligue">
  <div class="card-ligue">
    <div class="card-ligue-content">
        <div class="card-ligue-content-description">
            <h3> <%= ligue.name %></h3>
            <p><%= ligue.description %></p>
            <p>🏆 Mon classement : <span>1er • <%= ligue.users.count %> joueurs</span></p>
        </div>
        <div class="card-ligue-content-photo">
            <%= cl_image_tag ligue.photo.key%>
        </div>
    </div>
  </div>
</div>
<% end %>
