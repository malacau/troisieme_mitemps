<div class="container-card-ranking" data-toggle="modal" data-target="#Modal-participation-<%= participation.id %>">
  <div class="card-ranking">
    <div class="card-ranking-user">
      <p><%= participation.user.nickname %></p>
    </div>
    <div class="card-ranking-score">
     <p><%= participation.score %> pts</p>
    </div>
  </div>
</div>
<div class="trait"></div>
<!-- render 'shared/card_ranking' -->

<!-- Modal -->
<div class="modal fade" id="Modal-participation-<%= participation.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle"><strong>Ã‰quipe de : <%= participation.user.nickname %></strong></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="terrain">
          <% participation.user.current_line_up.selections.order(:terrain_position).each do |selection| %>
            <div class="player-lineup player-position-<%=selection.terrain_position%>-ligue-show">
              <div class="card-player-content">
                <%= image_tag selection.player.team.icon %>
                <div class="card-player-title">
                  <p><%= selection.player.first_name[1] %><span> <%= selection.player.last_name %></span></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
