<div class="main-container">
<div class="top-view">
  <div class="top-view-title">
    <h1>
      Bienvenue, <%= @line_up.user.nickname %>
    </h1>
  </div>
  <div class="top-view-content">
    <div class="top-view-content-main">
      <div class="top-view-content-trophee">
        <i class="fas fa-trophy"></i>
      </div>
      <div class="top-view-content-position">
        <h3>Votre score</h3>
        <h3><span><%= @line_up.score %> points</span></h3>
      </div>
    </div>
  </div>
</div>
<div class="languette-container">
  <h3>Mon Ã©quipe</h3>
  <div class="terrain">
    <% @line_up.selections.each do |selection| %>
      <div class="player-lineup player-position-<%=selection.player.position%>" data-toggle="modal" data-target="#exampleModalLong-<%= selection.id %>">
            <%= image_tag selection.player.team.icon %>
            <p><span> <%= selection.player.last_name %></span></p>
      </div>
    <div class="modal fade" id="exampleModalLong-<%= selection.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle"><%= selection.player.position %> </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
      <div class="modal-body">
        <div class="card-player-grid">
          <% Player.where(position: selection.player.position).first(40).each do |player| %>
            <%= link_to selection_path(selection, player), method: :patch do  %>
              <div class="card-player">
                <div class="card-player-content">
                  <%= image_tag player.team.icon %>
                  <div class="card-player-title">
                    <%= player.first_name %><span> <%= player.last_name %></span></p>
                  </div>
                  <div class="player-rating">
                   8.4 <i class="fas fa-star"></i>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>

            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <%= render 'shared/navbar' %>
</div>


