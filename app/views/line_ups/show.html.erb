
<div class="main-container">
  <div class="top-view">
    <div class="top-view-title">
      <h1>
      Bienvenue sur 3ème mi-temps
      </h1>
    </div>
    <div class="top-view-content">
      <div class="top-view-content-main">
        <div class="top-view-content-trophee">
          <%= image_tag "beer_rugby.png" %>
        </div>
        <div class="top-view-content-position">
          <h3>Ton dernier score <%= @line_up.user.nickname %> : </h3>
          <% if  @line_ups[-2].present?%>
            <h3><span><%= @line_ups[-2].score %> points</span></h3>
          <% else %>
            <h3><span>0 point</span></h3>
          <% end %>
          
        </div>
      </div>
    </div>
  </div>
  <div class="languette-container">
    <div class="languette-header">
    <h3 class="languette-container-title">Mon équipe</h3>
    <span class="budget">Budget : <%= @line_up.budget %> <i class="fas fa-coins"></i></span>
    </div>
    <div class="terrain">
      <% @line_up.selections.order(:terrain_position).each do |selection| %>
      <%= render "players_modale", selection: selection, line_up_teams: @line_up_teams, line_ups: @line_ups  %>
      <% end %>
    </div>

    <%= render 'shared/navbar' %>
  </div>
</div>


